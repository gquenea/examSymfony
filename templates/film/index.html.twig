{% extends 'base.html.twig' %}

{% block title %}Films{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Voici la liste des films</h1>

    {% for film in films %}
        <p>Utilisateur : {{ film.user.username }}</p>
        <p>Nom : {{ film.nom }}</p>
        <p>Résumé : {{ film.resume }}</p>
        <p>Réalisateur : {{ film.realisateur }}</p>
        <p>Année de sortie : {{ film.annee|date('Y') }}</p>

        <a class="btn btn-primary" href="{{ path('showfilm', {id:film.id}) }}">Voir</a>
        <hr>

    {% endfor %}


</div>
{% endblock %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/5/yeti/bootstrap.min.css">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('film') }}">Home</a>

            {% if app.user %}
                <a class="navbar-brand" href="{{ path('signout') }}">Signout</a>
                <a class="navbar-brand" href="{{ path('newfilm') }}">Créer un film</a>
            {% else %}
                <a class="navbar-brand" href="{{ path('register') }}">Register</a>
                <a class="navbar-brand" href="{{ path('signin') }}">Signin</a>

            {% endif %}

        </div>
    </nav>
        {% block body %}{% endblock %}
    </body>
</html>
